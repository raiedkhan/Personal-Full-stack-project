



<head>

    <link rel="stylesheet" type="text/css" media="screen" href="/css/login.css" />
</head>
<% include ./partials/header %>
<body class="bg-primary">
    <div class="container login">
        <div class="row">
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-12" id="left">
                <div class="row">
                    <div class="col-12">
                        <center>
                            <img src="/Images/rqlogo.png" width="200" height="200" class="img-fluid" id="logo">
                        </center>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 d-none d-sm-block" id="Quotes">
                        <center>
                                <% var count=0; quotes.forEach(function(quote) {  %>
                                    <% if(quote.body.length < 150 && count<3){%>
                                        <p><i>“<%=quote.body %>”</i></p><h5>~<%=quote.title %></h5> <br>
                                    <% count++; } %>
                                <% }) %>
                        </center>
                    </div>
                </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9 col-12" id="right">
                <center>
                    <div id="content">
                        <br><br>
                        <form method="post">
                            <div id="login_heading">
                                <h1>Login <i class="fas fa-sign-in-alt"></i></h1>
                            </div>
                            <br><br>
                            <fieldset>   
                                <input type="text" placeholder="Email or Username" name="username" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email or Username'" class="theinput" id="emailorun" required>
                                <br><br>
                                <input type="password" placeholder="Password" name="password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'" class="theinput" required>
                                <br><br><br>
                                <button type="submit">Log-In</button>
                            </fieldset>
                        </form>
                    </div>
                </center>
            </div>
        </div>
    </div>

  <script src="https://code.jquery.com/jquery-3.4.0.min.js"integrity="sha256-BJeo0qm959uMBGb65z40ejJYGSgR7REI4+CW1fNKwOg="crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    
  </body>
  </html>
