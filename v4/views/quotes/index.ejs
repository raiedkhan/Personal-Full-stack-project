<% include ../partials/header %>


<!--Header Starts-->

<div class="container-fluid header bg-primary" id="header-particles-js">
    <div class="row heading">
        <div class="col-12 ">
          <span class="q_day">
            <p class="typewrite" data-period="2000" data-type='[ "Welcome  to  Random  Quotes","Start writing , no matter what"]'>
              <span class="wrap"></span>
            </p>
          </span>
      </div>
    </div>
    <div class="row cards">
            <% quotes.slice(-3).forEach(function(quote) { %>
                <% if(quote.title.substring(0,3).toLowerCase()==="mot"){ %>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <div class="card" >
                                <div class="content">
                                    <div class="content-overlay">
                                        <p>"<%=quote.body.substring(0,110)%>"</p>
                                    </div>
                                    <img src="/Images/mot4.jpg" class="content-image card-img-top img-responsive" alt="...">
                                </div>
                                <span class="writer ">~ Submitted By <i class="fas fa-pen-fancy"></i> <a href="/users/<%=quote.author.id %>"><%=quote.author.firstname+quote.author.lastname%></a></span>
