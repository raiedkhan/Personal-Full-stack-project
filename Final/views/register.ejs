                                                        <span id="first_length"><span class=" pull-right" id="count-first">0</span>/15</span>
                                                        <br><br>
                                                        <input type="text" placeholder="Last Name" name="lastname" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Last Name'" class="theinput" maxlength="15" onkeyup="count_last(this)"  required>
