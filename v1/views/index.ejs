                    <div class="card" >
                        <div class="card-body">
                            <p class="card-text">"<%=quote.body.substring(0,110)%>"</p>
                        </div>
                        <div class="card-footer" >
                            <span class="title badge badge-secondary"><%=quote.title%></span>
                        </div>
                    </div>
            <% } %>
            <% }) %>
        </div>
    </div>
<!--main page ends-->

