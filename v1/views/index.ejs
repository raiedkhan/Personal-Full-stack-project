                                    <img src="../Images/love1.jpg" class="content-image card-img-top img-responsive" alt="...">
                                </div>
                            <% } %>
                            <div class="card-body">
                                <p class="card-text">"<%=quote.body.substring(0,110)%>"</p>
                            </div>
